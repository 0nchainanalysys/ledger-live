{
  "name": "@ledgerhq/wallet-common",
  "version": "0.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "preinstall": "node -e \"if (process.env.npm_execpath.indexOf('yarn') === -1) { console.log('\u001b[31mPlease use yarn\u001b[0m'); process.exit(1); }\"",
    "postinstall": "flow-typed install -s",
    "build": "yarn clean && yarn documentation && babel --source-maps -d lib src && flow-copy-source src lib",
    "watch": "babel --watch --source-maps -d lib src && flow-copy-source -w -v src lib",
    "prepare": "npm run build",
    "clean": "rm -rf lib/",
    "documentation": "documentation build src/** --project-name '@ledgerhq/wallet-common' --project-version `node -e \"console.log(require('./package.json').version)\"` --project-homepage https://github.com/LedgerHQ/ledger-wallet-common -g -f html -o documentation-website/public/docs",
    "prettier": "prettier --write 'src/**/*.js'",
    "lint": "eslint src",
    "flow": "flow src",
    "test": "TZ=America/New_York jest src"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/jest/globals.js"
    ]
  },
  "dependencies": {
    "@ledgerhq/currencies": "^4.7.1",
    "babel-jest": "^23.0.0-alpha.0",
    "invariant": "^2.2.2",
    "lodash": "^4.17.4",
    "prando": "^3.0.1",
    "react": "^16.0.0",
    "timemachine": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-preset-react-native": "^4.0.0",
    "documentation": "^6.1.0",
    "eslint": "^4.11.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.68.0",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.2.3",
    "jest": "^22.4.2",
    "prettier": "^1.8.2"
  }
}
